        <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
        <groupId>edu.mit.simile</groupId>
        <artifactId>babel-tsv-converter</artifactId>
        <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
        <groupId>edu.mit.simile</groupId>
        <artifactId>babel-xls-converter</artifactId>
        <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
        <groupId>edu.mit.simile</groupId>
        <artifactId>babel-jpeg-converter</artifactId>
        <version>1.0-SNAPSHOT</version>
    </dependency>

    
    <dependency>
